# Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=airline_user
DB_PASS=your_db_password_here
DB_NAME=airline_booking
DB_NAME_TEST=airline_booking_test

# Use SSL when connecting to managed DB services (true/false)
DB_SSL=false

# Connection pool (MySQL)
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Optional: set to true to run migrations at startup (not recommended for multi-instance production)
RUN_MIGRATIONS_AT_STARTUP=false
